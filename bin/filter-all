#! /bin/bash

function template() {
  local fn=$(cat "$2" | grep '#' | head -n 1 | awk '{print $2}')
  local dn=$(dirname "${fn}")

  mkdir -p "${dn}"
  bin/filter "$1" "$2" > "${fn}"
}

template vim vimrc/README.md
template tmux tmux.conf/README.md
template ini gitconfig/README.md
template zsh zshrc.local/README.md
template text config/git/ignore/README.md
template xmodmap Xmodmap/README.md
template tig tigrc/README.md
